{
  "kind": "collectionType",
  "collectionName": "Autores",
  "info": {
    "name": "Autor",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": false,
    "draftAndPublish": true
  },
  "attributes": {
    "nombre": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "posts": {
      "collection": "post",
      "via": "autor"
    },
    "bio": {
      "type": "richtext",
      "required": true
    },
    "link_personal": {
      "type": "string",
      "required": true
    },
    "foto": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "seo_url": {
      "type": "uid",
      "targetField": "nombre",
      "required": false
    },
    "index": {
      "type": "integer",
      "required": true,
      "unique": false,
      "min": 1,
      "default": 1
    }
  }
}
